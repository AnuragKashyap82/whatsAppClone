<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_bg"
    android:padding="12dp">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/black"/>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Create New Group"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/groupIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/titleTv"
        android:layout_centerHorizontal="true"
        app:civ_border_width="1dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="@color/colorPrimary"
        android:src="@drawable/ic_person_black"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Group Icon"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/groupNameTil"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:startIconDrawable="@drawable/ic_email_black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/groupNameEt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="Group Name"
            android:textColor="@color/black"
            android:inputType="text"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/createGrpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupNameTil"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_bg"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>